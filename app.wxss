 page {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: rgb(248, 241, 248);
}
.container {
  margin: 20rpx 20rpx;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
/* 自定义button样式，覆盖默认 */
#normal-button {
  display: inherit;
  line-height: normal;
  padding: 10rpx 20rpx;
  font-size: 25rpx;
  background-color: rgb(251, 114, 153);
  color: #fff;
  border-style: none;
}
/* iconfont在线字体 */
@font-face {
  font-family: 'iconfont';  /* project id 1022724 */
  src: url('//at.alicdn.com/t/font_1022724_bjg3jwephy.eot');
  src: url('//at.alicdn.com/t/font_1022724_bjg3jwephy.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_1022724_bjg3jwephy.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_1022724_bjg3jwephy.woff') format('woff'),
  url('//at.alicdn.com/t/font_1022724_bjg3jwephy.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_1022724_bjg3jwephy.svg#iconfont') format('svg');
}

.homeicon {
  font-family: 'iconfont' !important;
  font-size: 16px;
}

.top-bar {
  position: sticky;
  top: 0;
  z-index: 99;
  box-sizing: border-box;
  padding: 10rpx 20rpx 0 20rpx;
  background: #fff;
}

.usericon {
  width: 50rpx;
  height: 50rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #f8f5f5;
}

.tag {
  padding: 5rpx 10rpx;
  display: inline-block;
  border: 2rpx solid #c2d1e4;
  border-radius: 18rpx;
  font-size: 9pt;
}
.offset-right {
  margin-right: 20rpx;
}
.bfc {
  overflow: hidden;  /* 触发BFC */
}