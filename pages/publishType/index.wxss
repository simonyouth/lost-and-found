.publish-type {
    padding: 160rpx 0;
    box-sizing: border-box;
    height: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-direction: column;
}
.circle {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 200rpx;
}

.lost {
    background-color: rgb(251,114,153);
    color: #ffffff;
}
.found {
    background-color: #ffffff;
    color: rgb(251,114,153);
}