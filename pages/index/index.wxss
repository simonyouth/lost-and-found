/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  padding: 10rpx;
  display: inline-block;
  font-size: 13pt;
}
.lost {
  margin-right: 20rpx;
}

.actived {
  position: relative;
  /* border-bottom: 2rpx solid rgb(251,114,153); */
  color: rgb(251,114,153);
}
.actived::after {
  content: ' ';
  position: absolute;
  background-color: rgb(251,114,153);
  height: 2rpx;
  width: 60%;
  bottom: 0;
  left: 20rpx;
}

.content {
  position: relative;
}
.list {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.show-more {
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  font-size: 8pt;
  color: #ccc;
  text-align: center;
}
.find {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: sticky;
  bottom: 10%;
  left: 90%;
  background-color: rgba(43, 200, 221, 0.849);
  color: #fff;
  font-size: 10pt;
}